<!DOCTYPE html>
<html lang="es">
    <%- include('partials/head', {title: 'Edita Tu Producto' }) %>
    

    <body>

        <header>
            <%- include('partials/header') %>
        </header>

<body>
    <main>
        <section class="banner">
            <div class=" first-gap">

            <div class="container">
                <h1 class="">
                    Editor
                </h1>


            </div>

        </section>
        <section class="margin-form-start">
            <div class="container">
                <div class="form-contact">
                    <form action="/product/<%= productToEdit.products_id %>/edit" method="POST">
                        <div class="label-flex section-form">
                            <label for="">Nombre del Producto</label>
                            <input type="text" value="<%= productToEdit.name %>" id="name" placeholder="Nombre del producto">
                        </div>
                        <div class="label-flex section-form">
                            <label for="">Precio del Producto</label>
                            <input type="number" name="price"  value="<%= productToEdit.price %>" id="price" placeholder="Precio $">
                        </div>
                        <div class="label-flex file-form">
                            <label for="">Imagen/es del Producto</label>
                            <input type="file"  name="img"  id="img">
                        </div>
                        <div class="label-flex section-form">
                            <label for="">Descripción</label>
                            <textarea name="description"  id="description" cols="30" rows="10" placeholder="Descripción del producto"><%= productToEdit.description %></textarea>
                        </div> 
                        <div class="label-flex section-form">
                            <label for="">Descuento</label>
                            <input type="number" name="discount"  value="<%= productToEdit.discount %>" id="discount" placeholder="% Descuento">

                        </div>
                        <button class=" button large-button bg-green font-color-white " type="submit">Editar Producto</button>
                    </form>
                    <form action="/product/<%= productToEdit.products_id %>/delete" method="POST">
                        <button class=" button large-button bg-green font-color-white " type="submit">Borrar Producto</button></form>
                </div>
            </div>
        </section>

    </main>
    <footer>
        <%-include("partials/footer")%>
    </footer>

</body>
</html>
