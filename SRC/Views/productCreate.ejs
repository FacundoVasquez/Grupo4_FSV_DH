    <body>

        <header>
            <%- include('partials/header') %>
        </header>

        <main>
            <section class="banner">
                <div class=" first-gap">
    
                <div class="container">
                    <h1 class="">
                        Crea tu producto
                    </h1>
    
    
                </div>
    
            </section>
            <section class="margin-form-start">
                <div class="container">
                    <div class="form-contact">
                        <form action="/product/create" method="POST"
                        enctype='multipart/form-data'
                        >
                            <div class="label-flex section-form">
                                <label for="">Nombre del Producto</label>
                                <input type="text" value="" name="name" id="name" placeholder="Nombre del producto">
                            </div>
                            <div class="label-flex section-form">
                                <label for="">Precio del Producto</label>
                                <input type="number" name="price"  value="" id="price" placeholder="Precio $">
                            </div>
                            <div class="label-flex file-form">
                                <label for="img">Imagen/es del Producto</label>
                                <input type="file" name="img"  id="img">
                            </div>
                            <div class="label-flex section-form">
                                <label for="">Descripción</label>
                                <textarea name="description" id="description" cols="30" rows="10" placeholder="Descripción del producto"></textarea>
                            </div>
                            <div class="label-flex section-form">
                                <label for="">Descuento</label>
                                <input type="number" name="discount"  value="" id="discount" placeholder="% Descuento">
                            </div>
                            <button class=" button large-button bg-green font-color-white " type="submit">Crear</button>
                        </form>
                    </div>
                </div>
            </section>
    
        </main>
       
